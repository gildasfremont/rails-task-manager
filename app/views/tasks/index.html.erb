<h1>TO-DO</h1>

<h3><%= link_to "Ajouter une tâche", new_task_path %></h3>

<% @tasks.each do |task| %>
  <h2><%= link_to task.name, task_path(task) %></h2>
  <p><%= task.due_date %></p>
  <p><%= task.done ? "Fait" : "À faire" %></p>
  <%= link_to "Modifier", edit_task_path(task) %>
  <%= link_to "Supprimer", delete_task_path(task), method: :delete %>
<% end %>

